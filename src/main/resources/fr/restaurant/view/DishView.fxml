<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="14" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.restaurant.controller.DishController">

    <Label styleClass="tabTitle" text="Gestion des plats" />

    <!-- Tableau des plats -->
    <TableView fx:id="dishTable" prefHeight="350">
        <columns>
            <TableColumn fx:id="nameCol" prefWidth="180" text="Nom" />
            <TableColumn fx:id="priceCol" prefWidth="70" text="Prix €" />
            <TableColumn fx:id="catCol" prefWidth="120" text="Catégorie" />
            <TableColumn fx:id="ingCol" prefWidth="300" text="Ingrédients" />
            <TableColumn fx:id="countCol" prefWidth="70" text="Nb Ingr" />
        </columns>
    </TableView>


    <!-- Ligne d’ajout + recherche -->
    <HBox spacing="8">
        <TextField fx:id="nameField" promptText="Nom" />
        <TextField fx:id="priceField" promptText="Prix" />
        <TextField fx:id="ingField" promptText="Ingrédients (virgules)" />
        <Button fx:id="buttonAdd" onAction="#onAdd" text="Ajouter" />
        <Pane HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Recherche ingrédient…" />
    </HBox>
</VBox>
